<Page x:Class="Partner.Views.Views.Manager.MainPageManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Partner.Views.Views.Manager"
      xmlns:cmd="clr-namespace:Partner.Infrastructure.Commands"
      xmlns:Datacontext="clr-namespace:Partner.ViewModels.Views.Maneger"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница менеджера">
    <Page.DataContext>
        <Datacontext:MainPageManagerViewModel/>
    </Page.DataContext>
    <Page.Resources>
        <cmd:CloseApplicationCommand x:Key="CloseApplicationCommand"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <Menu Background="White" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="16">
                <Menu.Resources>
                    <ControlTemplate x:Key="{x:Static MenuItem.SubmenuItemTemplateKey}"
               TargetType="{x:Type MenuItem}">
                        <Border Name="Border" Background="White">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Icon" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Shortcut" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Name="Icon" Margin="6,0,6,0" VerticalAlignment="Center" ContentSource="Icon" />
                                <ContentPresenter Name="HeaderHost" Grid.Column="1" ContentSource="Header" RecognizesAccessKey="True" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="#3D26A0DA" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3D26A0DA" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Menu.Resources>
                <MenuItem Header="Программа" VerticalAlignment="Center">
                    <MenuItem Header="Войти как..."/>
                    <MenuItem Header="Выход" Command="{StaticResource CloseApplicationCommand}"/>
                </MenuItem>
                <MenuItem Header="Заказчики"/>
                <MenuItem Header="Автомобили"/>
                <MenuItem Header="Водители"/>
            </Menu>
        </DockPanel>
        <Frame Grid.Row="1" Content="{Binding StartPage}"/>
    </Grid>
</Page>
