<Window x:Class="Partner.Views.Windows.MainWindowInteraction.Insurances.OSAGOWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:Partner.Views.Windows.MainWindowInteraction.Insurances"
        xmlns:Datacontext="clr-namespace:Partner.ViewModels.Windows.MainWindowInteraction.Insurances"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="{Binding Title}" Height="300" Width="1000">
    <Window.DataContext>
        <Datacontext:OSAGOWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" Background="BlueViolet">
            <TextBlock Margin="10" Text="{Binding Title}" Foreground="White" FontSize="20"/>
        </WrapPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <WrapPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Margin="20">
                    <TextBlock Text="Автомобиль" TextAlignment="Center" FontSize="16"/>
                    <ComboBox IsEnabled="{Binding ActionCombobox}" FontSize="16" Margin="0,5" ItemsSource="{Binding status}" SelectedItem="{Binding SelectedVehicleProperty}" Width="180" Height="30"/>
                </StackPanel>
                <StackPanel Margin="20">
                    <TextBlock Text="Тип страховки" TextAlignment="Center" FontSize="16"/>
                    <TextBox IsReadOnly="True" FontSize="16" Margin="0,5" Text="{Binding Type,UpdateSourceTrigger=PropertyChanged}" Width="180" Height="30"/>
                </StackPanel>
                <StackPanel Margin="20">
                    <TextBlock Text="Серия" TextAlignment="Center" FontSize="16"/>
                    <TextBox Text="{Binding Series, UpdateSourceTrigger=PropertyChanged}" FontSize="16" Margin="0,5" MaxLength="4" Width="100" Height="30"/>
                </StackPanel>
                <StackPanel Margin="20">
                    <TextBlock Text="Номер" TextAlignment="Center" FontSize="16"/>
                    <TextBox Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}" FontSize="16" Margin="0,5" MaxLength="6" Width="180" Height="30"/>
                </StackPanel>
            </WrapPanel>
            <WrapPanel Grid.Row="1" HorizontalAlignment="Center">
                <StackPanel Margin="20">
                    <TextBlock Text="Дата страхования" TextAlignment="Center" FontSize="16"/>
                    <DatePicker SelectedDate="{Binding StartDate}" FontSize="16" Margin="0,5" Width="180" Height="30"/>
                </StackPanel>
                <StackPanel Margin="20">
                    <TextBlock Text="Дата окончания" TextAlignment="Center" FontSize="16"/>
                    <DatePicker SelectedDate="{Binding EndDate}" FontSize="16" Margin="0,5" Width="180" Height="30"/>
                </StackPanel>
            </WrapPanel>
        </Grid>
        <Button Grid.Row="1" Command="{Binding SaveCommand}" Style="{StaticResource ButtonStroge}" Background="White" Width="120" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20">
            <Button.Content>
                <Grid HorizontalAlignment="Stretch" Width="120">
                    <fa:ImageAwesome Icon="Save" HorizontalAlignment="Left" Height="20" Margin="5,0" Foreground="Black"/>
                    <TextBlock Text="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Button.Content>
        </Button>
    </Grid>
</Window>
