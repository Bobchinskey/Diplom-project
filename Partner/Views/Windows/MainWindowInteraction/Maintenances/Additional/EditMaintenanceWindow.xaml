<Window x:Class="Partner.Views.Windows.MainWindowInteraction.Maintenances.Additional.EditMaintenanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:Datacontext="clr-namespace:Partner.ViewModels.Windows.MainWindowInteraction.Maintenances.Additional"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Partner.Views.Windows.MainWindowInteraction.Maintenances.Additional"
        mc:Ignorable="d"
        Title="Редактирование технического обслуживания" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.DataContext>
        <Datacontext:EditMaintenanceWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" Background="BlueViolet">
            <TextBlock Margin="10" Text="Редактирование технического облсуживания" Foreground="White" FontSize="25"/>
        </WrapPanel>
        <WrapPanel Grid.Row="1" Margin="10,20,10,10">
            <TextBlock Text="Наименование технического обслуживания" FontSize="14" FontWeight="Bold"/>
            <TextBox Text="{Binding NameMaintenance, UpdateSourceTrigger=PropertyChanged}" Margin="10,0" Width="493"/>
        </WrapPanel>
        <Grid Grid.Row="2" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel HorizontalAlignment="Center" Grid.Column="0">
                <TextBlock Text="Дата Начала:" HorizontalAlignment="Center" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding StartDateMaintenance}" Margin="0,10" Width="150" HorizontalAlignment="Center"/>
            </StackPanel>
            <CheckBox Command="{Binding VisibleCommand}" IsChecked="{Binding IsCheck}" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="Завершено"/>
            </CheckBox>
            <StackPanel HorizontalAlignment="Center" Grid.Column="1" Visibility="{Binding Visible}">
                <TextBlock Text="Дата Окончания:" HorizontalAlignment="Center" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding EndDateMaintenance}" Margin="0,10" Width="150" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <Rectangle Grid.Row="3" Fill="Black" Width="1000" Height="1"/>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="5,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <DataGrid CanUserSortColumns="False" SelectedIndex="{Binding SelectCompletedWorks}" ItemsSource="{Binding DataCompletedWorks}" Grid.Column="0" CanUserResizeColumns="False" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Наименование работ" Binding="{Binding name_work}"/>
                        <DataGridTextColumn Header="Стоимость" Binding="{Binding cost_work}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Column="1">
                    <Button Style="{StaticResource ButtonStroge}" Margin="0,25,0,0" Command="{Binding AddCompletedWorksCommand}" Background="White" Width="30" Height="30">
                        <Button.Content>
                            <Grid>
                                <fa:ImageAwesome Icon="Plus" HorizontalAlignment="Left" Height="20" Foreground="Black"/>
                            </Grid>
                        </Button.Content>
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Редактировать"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Style="{StaticResource ButtonStroge}" Command="{Binding EditCompletedWorksCommand}" Margin="0,10,0,0" Background="White" Width="30" Height="30">
                        <Button.Content>
                            <Grid>
                                <fa:ImageAwesome Icon="Pencil" HorizontalAlignment="Left" Height="20" Foreground="Black"/>
                            </Grid>
                        </Button.Content>
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Редактировать"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Style="{StaticResource ButtonStroge}" Command="{Binding DropCompletedWorksCommand}" Margin="0,10,0,0" Background="White" Width="30" Height="30">
                        <Button.Content>
                            <Grid>
                                <fa:ImageAwesome Icon="Trash" HorizontalAlignment="Left" Height="20" Foreground="Black"/>
                            </Grid>
                        </Button.Content>
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Удалить"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1" Margin="5,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <DataGrid CanUserSortColumns="False" SelectedIndex="{Binding SelectSpareParts}" ItemsSource="{Binding DataSpareParts}" Grid.Column="0" CanUserResizeColumns="False" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Наименование запчасти" Binding="{Binding name_spare_part}"/>
                        <DataGridTextColumn Header="Стоимость" Binding="{Binding cost_spare_part}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Column="1">
                    <Button Style="{StaticResource ButtonStroge}" Margin="0,25,0,0" Command="{Binding AddDataSparePartsCommand}" Background="White" Width="30" Height="30">
                        <Button.Content>
                            <Grid>
                                <fa:ImageAwesome Icon="Plus" HorizontalAlignment="Left" Height="20" Foreground="Black"/>
                            </Grid>
                        </Button.Content>
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Редактировать"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Style="{StaticResource ButtonStroge}" Command="{Binding EditDataSparePartsCommand}" Margin="0,10,0,0" Background="White" Width="30" Height="30">
                        <Button.Content>
                            <Grid>
                                <fa:ImageAwesome Icon="Pencil" HorizontalAlignment="Left" Height="20" Foreground="Black"/>
                            </Grid>
                        </Button.Content>
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Редактировать"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Style="{StaticResource ButtonStroge}" Command="{Binding DropDataSparePartsCommand}" Margin="0,10,0,0" Background="White" Width="30" Height="30">
                        <Button.Content>
                            <Grid>
                                <fa:ImageAwesome Icon="Trash" HorizontalAlignment="Left" Height="20" Foreground="Black"/>
                            </Grid>
                        </Button.Content>
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Удалить"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="5">
            <Button Grid.Column="1" Command="{Binding EditMaintenanceCommand}" Style="{StaticResource ButtonStroge}" Background="White" Width="120" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">
                <Button.Content>
                    <Grid HorizontalAlignment="Stretch" Width="120">
                        <fa:ImageAwesome Icon="Save" HorizontalAlignment="Left" Height="20" Margin="5,0" Foreground="Black"/>
                        <TextBlock Text="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Button.Content>
            </Button>
            <Button Grid.Column="1" Command="{Binding}" Style="{StaticResource ButtonStroge}" Background="White" Width="120" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10">
                <Button.Content>
                    <Grid HorizontalAlignment="Stretch" Width="120">
                        <fa:ImageAwesome Icon="FileWordOutline" HorizontalAlignment="Left" Height="20" Margin="5,0" Foreground="Black"/>
                        <TextBlock Text="Экспортировать" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5,0"/>
                    </Grid>
                </Button.Content>
            </Button>
        </Grid>
    </Grid>
</Window>
